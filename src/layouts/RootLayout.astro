---
const { title = "HomeworkSMP" } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="en" class="bg-neutral-950 text-neutral-100">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="icon" type="image/webp" href="/templogo.webp" />
    </head>

    <body class="min-h-screen flex flex-col font-sans relative">
        <div id="bg1" class="bg-layer"></div>
        <div id="bg2" class="bg-layer opacity-0"></div>

        <Navbar />

        <main class="relative z-10 flex-1 px-6 md:px-12 lg:px-20 py-12">
            <slot />
        </main>

        <Footer />

        <script>
            let index = Math.floor(Math.random() * 64) + 1;
            let showingBg1 = true;

            const bg1 = document.getElementById("bg1");
            const bg2 = document.getElementById("bg2");

            bg1.style.backgroundImage = `url("/background/${index}.webp")`;
            setInterval(() => {
                index = Math.floor(Math.random() * 64) + 1;

                if (showingBg1) {
                    bg2.style.backgroundImage = `url("/background/${index}.webp")`;
                    bg2.classList.remove("opacity-0");
                    bg1.classList.add("opacity-0");
                } else {
                    bg1.style.backgroundImage = `url("/background/${index}.webp")`;
                    bg1.classList.remove("opacity-0");
                    bg2.classList.add("opacity-0");
                }

                showingBg1 = !showingBg1;
            }, 5000);
        </script>
    </body>
</html>
